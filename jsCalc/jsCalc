function add() {
    var sum = num1 + num2;
    return sum;
}

function subtract() {
    var sum1 = num1 - num2;
    return sum1;
}

function multiply() {
    var sum2 = num1 * num2;
    return sum2;
}

function divide() {
    var sum3 = num1 / num2;
    return sum3;
}

